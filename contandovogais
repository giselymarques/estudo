  <script> 
  
 
		function identificarletras(){

           
            var input= document.getElementById("input_contador").value 
            var vogais= ["a", "e", "i", "o", "u"]
             var contador=0
             var vagaisdoarray= ""
             

        for (var letra of input) {
             
             
            
            if (vogais.includes(letra)) {
                
                
                contador++   
             vagaisdoarray= vagaisdoarray + letra   
            }
            
          
        }
            
            
              document.getElementById("label_").innerText = "As vogais s√£o: " + vagaisdoarray
  
           
    }
    
 
 
 
    
   
   	
     </script>
   
  </head>
  <body>
  
  
    
  </body>

      <div>
     <label id="label_" for="User">Letras</label>
    <input type="text" id=input_contador name="text" required>
   <button onclick="identificarletras()">Enviar</button><br>
   
   </div>

</html>

 
  </script>
   
