<!DOCTYPE html>
<html lang="pt-br">
  <head>
  <script> 
function identificarletras(letras){
            var vogais= ["a", "e", "i", "o", "u"]
             var contador=0

        for (var letra of letras) {
             
             
            
            if (vogais.includes(letra)) {
                 
                
                contador++   
                
            }
            
          
        }
            return contador
    }
    
 
 
 
     function calcular (){
	
   	 var letras= document.getElementById("input_contador").value 
    	const resultado = identificarletras (letras);
  
         document.getElementById("label_percentual").innerText = resultado
  
  
  }
   
   	
     </script>
   
  </head>
  <body>
  
  
    
  </body>

   
     <label id="label_salario" for="User">informe o salario atual</label>
    <input type="text" id=input_contador name="text" required>
   <button onclick="calcular()">Enviar</button><br>

</html>

 
  </script>
   
  </head>
